# NeuroGraph Production Environment Configuration
# Version: v0.67.2
# Copy this file to .env.production and fill in your values

# =============================================================================
# Application Version
# =============================================================================
VERSION=v0.67.2

# =============================================================================
# Security (REQUIRED - Generate secure random values!)
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-me
JWT_SECRET_KEY=your-jwt-secret-key-here-change-me
GRAFANA_SECRET_KEY=your-grafana-secret-key-here-change-me

# Grafana Admin Password
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-password-here

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=8000
API_WORKERS=4
MAX_REQUESTS=10000
MAX_REQUESTS_JITTER=1000

# Resource limits
API_CPU_LIMIT=2.0
API_MEMORY_LIMIT=2G
API_CPU_RESERVATION=0.5
API_MEMORY_RESERVATION=512M

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
LOG_JSON_FORMAT=true
LOG_CORRELATION_TRACKING=true

# =============================================================================
# Storage
# =============================================================================
STORAGE_BACKEND=memory
NEUROGRAPH_MAX_TOKENS=100000
NEUROGRAPH_MAX_MEMORY_BYTES=2147483648

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["https://your-domain.com"]

# =============================================================================
# Monitoring
# =============================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

GRAFANA_PORT=3000
GRAFANA_ROOT_URL=http://localhost:3000

# =============================================================================
# Data Directory
# =============================================================================
DATA_DIR=./data
